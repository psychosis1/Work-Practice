<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.LoginController">
   <children>
      <Label text="Социальный центр">
         <font>
            <Font size="48.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <Label text="Авторизация">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0">
         <children>
            <Label text="Логин">
               <HBox.margin>
                  <Insets left="80.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="username" alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0" right="80.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0">
         <children>
            <Label text="Пароль">
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <PasswordField fx:id="password" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0" right="80.0" />
               </HBox.margin>
            </PasswordField>
         </children>
      </HBox>
      <Button fx:id="enter" defaultButton="true" mnemonicParsing="false" onAction="#login" text="ВХОД">
         <padding>
            <Insets bottom="5.0" left="80.0" right="80.0" top="5.0" />
         </padding></Button>
   </children>
</VBox>
